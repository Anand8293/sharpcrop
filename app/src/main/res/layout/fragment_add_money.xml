<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.anandroid.randd.fragments.AddMoneyFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_addmoney"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/outline"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:hint="Enter Amount"
            android:textColor="#757575"
            android:padding="15dp"
            android:drawableLeft="@drawable/payments"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/promo_code_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a Promocode ?"
            android:textColor="@color/blue"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:minLines="2"
            android:padding="0dp"
            android:drawableRight="@drawable/ic_highlight_off_black_24dp"
            android:visibility="invisible"
            />
        <RadioGroup
            android:id="@+id/payment_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/paytm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Paytm"
                android:textAppearance="?android:textAppearanceMedium"/>
            <RadioButton
                android:id="@+id/payumoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PayUMoney"
                android:textAppearance="?android:textAppearanceMedium"/>

        </RadioGroup>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

</LinearLayout>
